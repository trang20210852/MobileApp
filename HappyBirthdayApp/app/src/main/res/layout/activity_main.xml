<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:background="#92B36F55"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="-96dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="#9B3C3C"
            android:text="Happy Birthday App"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#EFE9E9"
            android:textSize="34sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="327dp"
            android:layout_height="516dp"
            android:rotationX="2"
            android:scrollbarDefaultDelayBeforeFade="200"
            android:translationX="110px"
            app:srcCompat="@drawable/sinhnhat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:text="Happy Birthday, Trang !"
            android:textAlignment="center"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>